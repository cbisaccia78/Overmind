{
  "name": "overmind-desktop",
  "version": "0.0.2",
  "description": "Overmind desktop app",
  "author": {
    "name": "Cole Bisaccia",
    "email": "cbisaccia78@gmail.com"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build:backend": "./.venv/bin/python tools/build_backend.py",
    "pack": "npm run build:backend && electron-builder --dir --publish never",
    "dist": "npm run build:backend && electron-builder --linux AppImage deb --publish never"
  },
  "devDependencies": {
    "electron": "^32.3.3",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "dev.overmind.desktop",
    "productName": "Overmind",
    "asar": false,
    "files": [
      "electron/**/*",
      "app/**/*",
      "pyproject.toml",
      "README.md"
    ],
    "extraResources": [
      {
        "from": "build/backend/overmind-backend",
        "to": "backend/overmind-backend"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Cole Bisaccia <cbisaccia78@gmail.com>",
      "category": "Development"
    },
    "deb": {
      "afterInstall": "packaging/deb-after-install.sh"
    }
  }
}