{
  "name": "overmind-desktop",
  "version": "0.0.11",
  "description": "Overmind desktop app",
  "author": {
    "name": "Cole Bisaccia",
    "email": "cbisaccia78@gmail.com"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build:backend": "node tools/run_build_backend.js",
    "pack": "npm run build:backend && electron-builder --dir --publish never",
    "dist": "npm run dist:linux",
    "dist:linux": "npm run build:backend && electron-builder --linux AppImage deb --publish never",
    "dist:mac": "npm run build:backend && electron-builder --mac dmg zip --publish never",
    "dist:win": "npm run build:backend && electron-builder --win nsis zip --publish never"
  },
  "devDependencies": {
    "electron": "^32.3.3",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "dev.overmind.desktop",
    "productName": "Overmind",
    "asar": false,
    "files": [
      "electron/**/*",
      "app/**/*",
      "pyproject.toml",
      "README.md"
    ],
    "extraResources": [
      {
        "from": "build/backend",
        "to": "backend",
        "filter": [
          "overmind-backend*"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Cole Bisaccia <cbisaccia78@gmail.com>",
      "category": "Development"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "deb": {
      "afterInstall": "packaging/deb-after-install.sh"
    }
  }
}
